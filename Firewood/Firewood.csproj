<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>devcutler.Firewood</PackageId>
    <Version>1.0.0</Version>
    <Authors>devcutler</Authors>
    <Description>A simple bespoke logging library with slightly different structure than others.</Description>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>Unlicense</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/devcutler/firewood</RepositoryUrl>
    <PackageTags>logging logger</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../README.md" pack="true" PackagePath="." />
  </ItemGroup>

  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <OutputPath>bin/</OutputPath>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

</Project>